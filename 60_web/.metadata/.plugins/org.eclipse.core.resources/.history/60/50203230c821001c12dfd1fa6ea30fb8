<mapper namespace="guestbook">
	
	<!-- select 태그 3개 속성 id, resultType, parameterType -->
 	<select id="all" resultType = "com.bc.mybatis.GuestbookVO">
 		SELECT IDX, NAME, SUBJECT, CONTENT, EMAIL, PWD, REGDATE
 		FROM GUESTBOOK
 		ORDER BY IDX
 	</select>
</mapper>